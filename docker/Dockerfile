FROM multiarch/alpine:armhf-edge

LABEL maintainer="Massimo Gaggero <massimo dot gaggero at crs4 dot it>"

ENV APP_HOME=/opt/htu21d/

# Install required packages
RUN apk add --no-cache python3 git && \
	pip3 install virtualenv

RUN \
	mkdir -p ${APP_HOME} && \
	cd ${APP_HOME} && \
	virtualenv venv && \
	. venv/bin/activate && \
	pip3 install paho-mqtt influxdb

WORKDIR ${APP_HOME}

RUN . venv/bin/activate && git clone https://github.com/mgaggero/Adafruit_Python_HTU21D.git && \
	cd Adafruit_Python_HTU21D && python3 setup.py install

COPY src src
COPY tests tests

ENTRYPOINT ["src/entrypoint.sh"]

CMD [ "-c", "/opt/configs/tdm.conf" ]
